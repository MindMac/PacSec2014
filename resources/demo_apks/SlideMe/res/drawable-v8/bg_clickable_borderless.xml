<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="150"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_listitem_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/bg_listitem_focused" />
        </shape>
    </item>
</selector>